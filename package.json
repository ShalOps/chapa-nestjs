{
  "name": "chapa-nestjs",
  "version": "1.3.1",
  "description": "Chapa SDK for NestJS",
  "author": "Fireayehu Zekarias<fireayehuzekarias@gmail.com>",
  "license": "MIT",
  "url": "https://github.com/fireayehu/chapa-nestjs#readme",
  "main": "dist/chapa-sdk/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/chapa-client/main.js\"",
    "build": "tsc",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fireayehu/chapa-nestjs"
  },
  "keywords": [
    "nestjs",
    "chapa",
    "chapa-nestjs",
    "payment"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.1.8"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "nanoid": "^5.1.6",
    "nanoid-dictionary": "^4.3.0",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.8",
    "@nestjs/core": "^11.1.8",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/testing": "^11.1.8",
    "@types/express": "4.17.13",
    "@types/jest": "29.0.0",
    "@types/node": "18.7.14",
    "@types/supertest": "2.0.12",
    "jest": "^28.0.0",
    "prettier": "3.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.6",
    "supertest": "6.2.4",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "tsc-watch": "5.0.3",
    "tsconfig-paths": "4.1.0",
    "tslint": "5.20.1",
    "typescript": "5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
